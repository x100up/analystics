{% extends 'layout/main.jinja2' %}

{% block head %}
    <script type="text/javascript" src="/static/js/jquery-ui-1.8.23.custom.min.js"></script>
    <script type="text/javascript" src="/static/js/jquery.ui.picker.addon.js"></script>
    <script type="text/javascript" src="/static/libs/autocomplete/jquery.autocomplete-min.js"></script>
    <script type="text/javascript" src="/static/js/newWorker.js" ></script>

    <link href="/static/libs/autocomplete/styles.css" type="text/css" rel="stylesheet">
    <link href="/static/css/pepper-grinder/jquery-ui-1.8.23.custom.css" type="text/css" rel="stylesheet">

    <script type="text/javascript" src="/static/libs/reveal/jquery.reveal.js"></script>
    <link href="/static/libs/reveal/reveal.css" type="text/css" rel="stylesheet">
    <script type="text/javascript">
        var appCode = '{{ app.code }}';
    </script>
{% endblock %}

{% block content %}
    <h1>{{ app.name }}</h1>
    <form action="" method="post">
        <input type="hidden" name="appname" value="topface">
        <div class="grid_12 interval_form">



            <label for="group_interval">Интервал:</label> <select name="group_interval" id="group_interval">
                {% for key, value in task.intervals.items() %}
                <option value="{{ key }}" {% if task.interval == key %}selected{% endif %} >{{ value }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="grid_12">
            {% for taskItem in task.items %}
                {% include 'blocks/key_container.jinja2' %}
            {% endfor %}

            <div class="add_key grid_4 omega" onclick="addKey()"></div>
        </div>

        <div class="grid_12">
            <input type="submit" value="Отправить" class="awesome green">
        </div>

    </form>


    <div id="myModal" class="reveal-modal">

    </div>

{% endblock %}