{% extends 'layout/main.jinja2' %}
{% block head %}
    <script type="text/javascript" src="/static/js/dashboard.js"></script>
    <link href="{{ static_url_prefix }}/css/dashboard.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block content %}
    <h1>{{ app.name }}</h1>

    <a href="/dashboard/app/{{ app.code }}/new" class="awesome green" style="margin-top: 10px;">Новая задача</a>

    <form action="" method="post">
        <table style="margin-top: 20px;" id="workersTable">

        {% for worker in lastWorkers %}
            <tr class="job_{{worker.status}}">
                <td class="q {{ worker.status }}">
                    {% if worker.status == 'ALIVE' %}
                        <img src="/static/img/ajax-loader.gif" alt="Выполняется" id="loader_{{ worker.workerId  }}">
                        <span class="alive_progress" data-stage_count="{{ worker.task.stageCount }}" data-workerid="{{ worker.workerId }}" id="progress_{{ worker.workerId }}"></span>
                    {% endif %}
                </td>
                <td>
                    <a href="/dashboard/app/{{ app.code }}/result?jobId={{worker.workerId}}" id="link_{{worker.workerId}}">{{worker.name}}</a>

                    <span class="button edit_name" onclick="editName({{worker.workerId}})"></span>
                    <a class="copy_action button copy" href="/dashboard/app/{{ app.code }}/new?baseOn={{worker.workerId}}" title="create on base"></a>
                </td>

                <td>
                    {{worker.startDate|smartDatePeriod(worker.endDate)}} <sup>{{worker.startDate|smartDateInterval(worker.endDate)}}</sup>
                </td>
                <td class="action q">
                    <input type="checkbox" value="{{worker.workerId}}" name="jobId" class="jobcb">
                </td>
            </tr>
        {% endfor %}
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td colspan="2" style="text-align: right"><input type="submit" name="action" value="Удалить" class=" awesome orange"></td>
                </tr>
            </tfoot>
        </table>

        {% if pageCount > 1 %}
                Страница:
                <ul class="paging">
                {% for p in range(1, pageCount + 1) %}
                    {% if currentPage == p %}
                        <li>{{ p }}</li>
                    {% else %}
                        <li><a href="?page={{ p }}">{{ p }}</a></li>
                    {% endif %}
                {% endfor %}
                </ul>
        {% endif %}
    </form>

{% endblock %}