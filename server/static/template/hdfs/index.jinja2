{% extends 'layout/main.jinja2' %}

{% block head %}
    <script type="text/javascript" src="{{ static_url_prefix }}/js/hdfs.js" ></script>
    <link href="{{ static_url_prefix }}/css/hdfs.css" type="text/css" rel="stylesheet">
{% endblock %}

{% block content %}
<h1>HDFS</h1>

<div class="grid_12">

    <div class="grid_7 alpha">
        <div id="navigator">

        </div>
    </div>
    <div class="grid_1">
        <span class="a" onclick="loadPath(currentPath)">reload</span>
    </div>
    <div class="grid_4 omega" id="folderSummary">

    </div>

    <table>
        <thead>
            <tr>
                <th>pathSuffix</th>
                <th>permission</th>


                <th>length</th>
                <th>blockSize</th>
                <th>rep</th>

                <th>accessTime</th>
                <th>modificationTime</th>
            </tr>
        </thead>
        <tbody id="fileList">

        </tbody>
    </table>

</div>
 <div class="clearfix"></div>

{% endblock %}