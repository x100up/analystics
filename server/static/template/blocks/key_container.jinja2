<div class="key_form_item grid_12 alpha omega" id="key_container_{{ taskItem.index  }}">

    <input type="hidden" name="indexes" value="{{ taskItem.index }}">

    <div class="grid_12 alpha omega key_header" id="key_header_{{ taskItem.index }}">
        <div class="grid_10 alpha">
            <ul class="top_key_menu">
                <li>
                    <input type="text" name="key_{{ taskItem.index }}" id="key_{{ taskItem.index }}"
                       data-index="{{ taskItem.index }}" class="key_autocomplete key" value="{{ taskItem.key or '' }}">
                    <input type="button" class="button find findkey" onclick="findKey({{ taskItem.index }})">
                </li>

                <li>
                    <input type="text" class="datepicker start" name="start_{{ taskItem.index }}" id="start_{{ taskItem.index }}" value="{{ taskItem.start|datetofiled }}">
                    <span class="date_d"></span>
                    <input type="text" class="datepicker end" name="end_{{ taskItem.index }}" id="end_{{ taskItem.index }}" value="{{ taskItem.end|datetofiled }}">
                    <input class="button lock unlock" type="button" onclick="lockDate({{ taskItem.index }})">
                </li>
            </ul>
        </div>
    </div>

    <div class="clearfix"></div>




    <div id="key_{{ taskItem.index }}_tag_container" class="tag_container">
        {% if taskItem.key and key_configs.has_key(taskItem.key) %}
           {% set tags = key_configs[taskItem.key] %}
           {% set index = taskItem.index %}
           {% set key = taskItem.key %}
           {% set values = taskItem.conditions %}

           {% include 'blocks/tag_container.jinja2' %}
        {% endif %}
    </div>

 {#   <span class="awesome orange small" onclick="deleteKey({{ taskItem.index  }})">удалить</span>
#}

</div>