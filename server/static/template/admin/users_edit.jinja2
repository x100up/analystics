{% extends 'layout/gum.jinja2' %}

{% block content %}
    <nav class="back">
        <ul>
            <li><a href="/admin/users"> пользователи</a></li>
        </ul>
    </nav>

    <h1>{% if user.userId %}Редактирование{% else %}Добавление{% endif %} пользователя</h1>

    {% include 'blocks/error.jinja2' %}

   <form action="" method="POST">
       <input type="hidden" name="userId" value="{{ user.userId or '' }}">
