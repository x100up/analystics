{% extends 'admin/adminLayout.jinja2' %}

{% block content %}
    <h2>Редактирование событий</h2>

    {% include 'blocks/error.jinja2' %}
    {% include 'admin/appConfig/menu.jinja2' %}

    <span class="awesome orange" onclick="addTag(this)">Добавить тег</span>

    <table class="table table-striped">
        {% for tag in tags %}
            <tr>
                <td><span class="btn" onclick="editTag('{{ tag.code }}')"><i class="icon-edit"></i></span></td>
                <td>{{ tag.getName() }}</td>
                <td>{{ tag.code }}</td>
            </tr>
        {% endfor %}
    </table>

    <div class="modal hide fade editTagModal" id="myModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Редактирование тега</h3>
        </div>
        <div class="modal-body" id="modalBody">

        </div>
        <div class="modal-footer">

        </div>
    </div>

{% endblock %}